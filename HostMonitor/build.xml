<project basedir="." default="pack" name="SnmpInterface">
	
	<property environment="env" />
	<property name="os" value="${os.name}" />
	<property name="src.dir" value="${basedir}/src" />
	<property name="resource.dir" value="${basedir}/resources" />
	<property name="build.dir" value="${basedir}/build" />
	<property name="lib.dir" value="${basedir}/lib" />
	<property name="config.dir" value="${basedir}/config" />		

	<!-- Build classpath -->
	<path id="classpath">
		<!-- So that we can get jndi.properties for InitialContext -->
		<pathelement location="${basedir}" />		
	        <fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		
		<pathelement location="${build.dir}" />
	</path>

	<!--property name="build.classpath" refid="classpath" /-->	
	
	<target name="clean">
		<echo>----clean in boss-snmp----</echo>
		<delete dir="${build.dir}" failonerror="false" />
	</target>

    <target name="compile">
		<mkdir dir="${build.dir}" />
		<javac encoding="utf-8" srcdir="${src.dir}" destdir="${build.dir}"
				debug="on" 
				optimize="off"
				includeantruntime="on"
		>
			<classpath>
				<path refid="classpath" />
			</classpath>
		</javac>
    	<copy todir="${build.dir}/cn/bstar/gale/boss/model">
    		<fileset dir="${src.dir}/cn/bstar/gale/boss/model" includes="*.xml" />
    	</copy>
        <copy todir="${build.dir}/">
        	<fileset dir="${src.dir}/" includes="*.properties" />
        </copy>

	</target>
	
	<target name="pack" depends="clean,compile">
		<echo>build boss-snmp-monitoring-1.0.1.jar in boss-snmp</echo>
		<jar destfile="${build.dir}/boss-snmp-monitoring-1.0.1.jar">
            <fileset dir="${build.dir}">  
                <include name="**/*.*"/>  
            </fileset>
		</jar>		
    	<copy todir="${lib.dir}/">
    		<fileset dir="${build.dir}/" includes="*.jar" />
    	</copy>
	</target>

</project>
